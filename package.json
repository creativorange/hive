{
  "name": "meta-trading-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:api": "pnpm --filter @meta/api dev",
    "dev:web": "pnpm --filter @meta/web dev",
    "start": "turbo start",
    "start:api": "pnpm --filter @meta/api start",
    "start:web": "pnpm --filter @meta/web start",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:core": "pnpm --filter @meta/core test",
    "test:trading": "pnpm --filter @meta/trading test",
    "test:database": "pnpm --filter @meta/database test",
    "test:api": "pnpm --filter @meta/api test",
    "test:e2e": "pnpm --filter @meta/tests test",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @meta/database db:generate",
    "db:migrate": "pnpm --filter @meta/database db:migrate",
    "db:push": "pnpm --filter @meta/database db:push",
    "db:studio": "pnpm --filter @meta/database db:studio",
    "db:reset": "pnpm --filter @meta/database db:reset",
    "db:seed": "dotenv -e .env -- tsx scripts/seed-strategies.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "contracts:build": "pnpm --filter @meta/contracts build",
    "contracts:test": "pnpm --filter @meta/contracts test",
    "contracts:deploy": "pnpm --filter @meta/contracts deploy"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
